<%- include('partials/header', { 
  title: 'Résultats de recherche',
  description: `Résultats pour "${query}"${selectedCity ? ' à ' + selectedCity : ''}`,
  bodyClass: 'auth-page' 
}) %>

<main class="auth-main" role="main">
  <h1 class="auth-title">Résultats pour « <%= query %> » <%= selectedCity ? `à ${selectedCity}` : '' %></h1>
  <h2 class="auth-subtitle">Experts SEO correspondant à votre recherche</h2>

  <% if (results.length > 0) { %>
    <ul class="results-list">
      <% results.forEach(profil => { %>
        <li class="profil-item">
          <h2><a href="/profil/<%= profil.id_profile %>"><%= profil.firstname %> <%= profil.lastname %></a></h2>
          <p>Ville : <%= profil.city || 'Non renseignée' %></p>
          <% if (profil.expertise) { %>
            <p>Expertise : <%= profil.expertise %></p>
          <% } %>
        </li>
      <% }) %>
    </ul>
  <% } else { %>
    <p>Aucun résultat trouvé pour ces critères.</p>
  <% } %>

  <a href="/rechercher" class="button" aria-label="Nouvelle recherche">← Nouvelle recherche</a>
</main>

<%- include('partials/footer') %>
